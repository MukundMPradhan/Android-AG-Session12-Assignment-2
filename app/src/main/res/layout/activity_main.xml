<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="acadgild.assignment.session12_assignment_2.MainActivity"
    android:background="#a82aa1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etInput"
        android:hint="@string/enter_somthing" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/buttonSubmit"
        android:layout_below="@+id/etInput"
        android:layout_gravity="center_horizontal" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="acadgild.assignment.session12_assignment_2.fragment.SimpleAddition"
        android:id="@+id/fragmentSimpleAddition"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/buttonSubmit"
        android:layout_centerHorizontal="true" >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/etDisplay" />

    </fragment>
</RelativeLayout>
